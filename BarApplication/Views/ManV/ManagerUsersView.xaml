<Page x:Class="BarApplication.Views.ManagerUsersView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BarApplication.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ManagerUsersView">

    <Page.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
    </Page.Resources>

    <Grid Background="AliceBlue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>

        <Label 
               Content="Manager&#xD;&#xA;Users"
               FontSize="26"
               FontWeight="Bold"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"
               Grid.Column="0"
               Grid.Row="0"/>

        <Grid
            Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="6*"/>
            </Grid.RowDefinitions>
            <Button
            Content="PRODUCTS"
            Command="{Binding GoToProductsCommand}"
            Grid.Row="0"
            Height="30"
            Margin="10,0"
            VerticalAlignment="Center"/>
            <Button
            Content="SUPPLIES"
            Command="{Binding GoToSuppliesCommand}"
            Grid.Row="1"
            Height="30"
            Margin="10,0"
            VerticalAlignment="Center"/>
        </Grid>

        <!-- USERS -->
        <Grid Background="Azure"
              Grid.Column="1"
              Grid.Row="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="1.5*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label Content="User"
                   
                   FontSize="26"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"/>

            <Label Content="User:"
                   
                   FontSize="16"
                   Grid.Row="1"
                   Margin="20,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"/>

            <ComboBox ItemsSource="{Binding Users}"
                      DisplayMemberPath="Login"
                      SelectedItem="{Binding SelectedUser, Mode=TwoWay}"
                      Grid.Row="1"
                      Width="200"
                      Height="30"
                      Margin="30, 0"
                      HorizontalAlignment="Right"/>

            <Label Content="Login"
                   Visibility="{Binding AddFieldsVisibility}"
                   Margin="10,0,0,0"
                   Grid.Row="3"
                   HorizontalAlignment="Left"/>
            <TextBox Text="{Binding NLogin}"
                   Visibility="{Binding AddFieldsVisibility}"
                     Grid.Row="3"
                     Margin="10,10,0,0"
                     Width="100"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Left"/>
            <Label Content="Password"
                   Visibility="{Binding AddFieldsVisibility}"
                   Grid.Row="3"
                   HorizontalAlignment="Center"/>
            <TextBox Text="{Binding NPassword}"
                   Visibility="{Binding AddFieldsVisibility}"
                     Grid.Row="3"
                     Margin="10,10,0,0"
                     Width="100"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Center"/>
            <Label Content="Position"
                   Visibility="{Binding AddFieldsVisibility}"
                   Margin="0,0,10,0"
                   Grid.Row="3"
                   HorizontalAlignment="Right"/>
            <ComboBox ItemsSource="{Binding NPositions}"
                      SelectedItem="{Binding NPosition}"
                   Visibility="{Binding AddFieldsVisibility}"
                     Grid.Row="3"
                     Margin="0,10,10,0"
                     Width="100"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Right"/>

            <Button Command="{Binding ShowAddFieldsCommand}"
                    Grid.Row="2"
                    Content="ADD USER"
                    Margin="30,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Height="30"
                    Width="100"/>
            <Button Command="{Binding DeleteUserCommand}"
                    Grid.Row="2"
                    Content="DELETE USER"
                    Background="Red"
                    Margin="30,0,30,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Height="30"
                    Width="100"/>
            <Button Command="{Binding AddUserCommand}" Content="ADD"
                   Visibility="{Binding AddFieldsVisibility}"
                    
                    FontSize="25"
                    Background="LightGreen"
                    Grid.Row="4"
                    Width="150"
                    Height="35"/>

        </Grid>

        <!--DETAIL INFORMATION-->
        <Grid Grid.Column="2"
              Grid.Row="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="1.5*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="1.5*"/>
            </Grid.RowDefinitions>

            <Label Content="Detail information"
                   
                   FontSize="26"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"/>

            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                <Label Content="Login:"  FontSize="18"/>
                <Label Content="{Binding Login}" FontSize="16"/>
            </StackPanel>
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                <Label Content="Password:"  FontSize="18"/>
                <Label Content="{Binding Password}" FontSize="16"/>
            </StackPanel>
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
                <Label Content="Position:"  FontSize="18"/>
                <Label Content="{Binding Position}" FontSize="16"/>
            </StackPanel>

        </Grid>
    </Grid>
</Page>
