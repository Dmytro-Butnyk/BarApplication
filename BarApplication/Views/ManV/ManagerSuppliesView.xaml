<Page x:Class="BarApplication.Views.ManagerSuppliesView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BarApplication.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ManagerSuppliesView">

    <Page.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
    </Page.Resources>
    
    <Grid Background="AliceBlue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>

        <Label 
        Content="Manager&#xD;&#xA;Supplies"
        FontSize="26"
        FontWeight="Bold"
        
        HorizontalContentAlignment="Stretch"
        VerticalContentAlignment="Stretch"
        Grid.Column="0"
        Grid.Row="0"/>

        <Grid
            Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="6*"/>
            </Grid.RowDefinitions>
            <Button
            Content="PRODUCTS"
            Command="{Binding GoToProductsCommand}"
            Grid.Row="0"
            Height="30"
            Margin="10,0"
            VerticalAlignment="Center"/>
            <Button
            Content="USERS"
            Command="{Binding GoToUsersCommand}"
            Grid.Row="1"
            Height="30"
            Margin="10,0"
            VerticalAlignment="Center"/>
        </Grid>

        <!--ADD SUPPLIES-->
        <Grid
            Background="Azure"
            Grid.Column="1"
            Grid.Row="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="1.5*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            
            <Label
                Content="Supply information"
                
                FontSize="26"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"/>

            <Label
                Content="Product:"
                
                FontSize="16"
                Grid.Row="1"
                Margin="20,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"/>

            <ComboBox 
                ItemsSource="{Binding Products}"
                DisplayMemberPath="Name"
                SelectedItem="{Binding SelectedProduct}"
                Grid.Row="1"
                Width="200"
                Height="30"
                Margin="30, 0"
                HorizontalAlignment="Right"/>

            <Label
                Content="Quantity:"
                
                FontSize="16"
                Grid.Row="2"
                Margin="20,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"/>

            <TextBox
                Text="{Binding Quantity}"
                Width="200"
                Grid.Row="2"
                Height="30"
                Margin="30, 0"
                HorizontalAlignment="Right"/>

            <Label
                Content="Supply time:"
                
                FontSize="16"
                Grid.Row="3"
                Margin="20,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"/>

            <Label
                Content="{Binding SupplyDate}"
                
                FontSize="16"
                Grid.Row="3"
                Margin="30,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"/>

            <Button
                Command="{Binding AddSupplyCommand}"
                Content="ADD SUPPLY"
                
                Grid.Row="4"
                Margin="60, 20"
                Background="LightGreen"/>

        </Grid>
        
        <!--SUPPLIES LIST-->
        <Grid
            Background="AntiqueWhite"
            Grid.Column="2"
            Grid.Row="1">

            <ListBox 
                ItemsSource="{Binding Supplies}"
                Grid.Column="1"
                Grid.Row="1"
                Background="Transparent">

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Background="Azure">
                            <TextBlock Text="Product name: "/>
                            <TextBlock Text="{Binding Product.Name}" Margin="10"/>
                            <TextBlock Text="Quantity: " />
                            <TextBlock Text="{Binding Quantity}" Margin="10"/>
                            <TextBlock Text="Supply time: " />
                            <TextBlock Text="{Binding SupplyTime}" Margin="10"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

        </Grid>
        
    </Grid>
</Page>
